<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/touch_selector">

    <ImageView
        android:id="@+id/list_item_artist_image"
        android:layout_width="@dimen/artist_image_size"
        android:layout_height="@dimen/artist_image_size"
        android:layout_margin="@dimen/artist_image_margin"
        android:src="@drawable/abc_btn_check_material"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/sample_artist"
        android:id="@+id/list_item_artist_name"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/artist_text_left_margin"
        android:minHeight="?android:attr/listPreferredItemHeight"/>

</LinearLayout>